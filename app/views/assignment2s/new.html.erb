<h1>New Asset</h1>
<% if logged_in? %>
<% form_for @assignment2, :html => { :multipart => true } do |f| %>

  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :serial %><br />
    <%= f.text_field :serial %>
  </p>
  <p>
    <%= f.label :location %><br />
    <%= f.text_field :location %>
  </p>
<p>
  <%= f.file_field :photo %>
</p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', assignment2s_path %>
<% else %>
<%= link_to "Log In", login_path %>
<% end %>
